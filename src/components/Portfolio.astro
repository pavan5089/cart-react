---
interface Project {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  liveUrl?: string;
  githubUrl?: string;
}

const projects: Project[] = [
  {
    title: "E-commerce Platform",
    description: "A full-featured e-commerce platform built with React and Node.js, featuring real-time inventory management and secure payment processing.",
    image: "https://img.freepik.com/premium-photo/ecommerce-banner_1281315-2623.jpg",
    technologies: ["React", "Node.js", "MongoDB"],
    liveUrl: "https://project1.com",
    githubUrl: "https://github.com/pavan5089"
  },
  {
    title: "Task Management",
    description: "A collaborative task management application with real-time updates and team collaboration features.",
    image: "https://res.cloudinary.com/dgs8wxxrs/image/upload/v1740638613/task-management_2_udz7nx.avif",
    technologies: ["Html", "Css", "Javascript"],
    liveUrl: "https://project2.com",
    githubUrl: "https://github.com/pavan5089/Task"
  },
  {
    title: "Healthcare Dashboard",
    description: "An analytics dashboard for healthcare providers, featuring data visualization and patient management tools.",
    image: "https://res.cloudinary.com/dgs8wxxrs/image/upload/v1740639233/health-care-landing-page_wvc4m8.jpg",
    technologies: ["Html", "Css", "Javascript", "MYSQL"],
    liveUrl: "https://project3.com",
    githubUrl: "https://github.com/pavan5089"
  }
];
---
<section id="portfolio" class="py-20 bg-gray-800 text-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Featured Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div 
          class="bg-gray-900 rounded-lg overflow-hidden shadow-lg transform transition-all duration-500 hover:-translate-y-2 hover:shadow-2xl animate-fadeIn"
          style={`animation-delay: ${index * 200}ms`}
        >
          <div class="relative overflow-hidden group">
            <img 
              src={project.image}
              alt={project.title}
              class="w-full h-48 object-cover transform transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-blue-600 opacity-0 group-hover:opacity-20 transition-opacity duration-500"></div>
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
            <p class="text-gray-400 mb-4">{project.description}</p>
            <div class="mb-4">
              <div class="flex flex-wrap gap-2">
                {project.technologies.map(tech => (
                  <span class="bg-gray-700 text-gray-300 px-2 py-1 rounded text-sm transform transition-transform hover:scale-105">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
            <div class="flex gap-4">
              {project.liveUrl && (
                <a 
                  href={project.liveUrl}
                  target="_blank"
                  class="text-blue-400 hover:text-blue-300 transform transition-transform hover:translate-x-1"
                >
                  Live Demo
                </a>
              )}
              {project.githubUrl && (
                <a 
                  href={project.githubUrl}
                  target="_blank"
                  class="text-blue-400 hover:text-blue-300 transform transition-transform hover:translate-x-1"
                >
                  GitHub
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

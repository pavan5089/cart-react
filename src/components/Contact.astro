---
const socialLinks = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/gudupalli-pavan-566265353/",
    icon: "👔"
  },
  {
    name: "GitHub",
    url: "https://github.com/pavan5089",
    icon: "💻"
  },
  {
    name: "Twitter",
    url: "https://twitter.com/yourusername",
    icon: "🐦"
  }
];
---
<section id="contact" class="py-20 bg-gray-800 text-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-16">Get in Touch</h2>
    
    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-2xl font-bold mb-6">Contact Information</h3>
        <div class="space-y-4 mb-8">
          <p class="flex items-center">
            <span class="text-2xl mr-4">📧</span>
            <a href="mailto:your.email@example.com" class="text-blue-400 hover:text-blue-300">
              gudupallipavan@gmail.com
            </a>
          </p>
          <p class="flex items-center text-gray-300">
            <span class="text-2xl mr-4">📍</span>
            <span>Mahabubnagar</span>
          </p>
        </div>
        
        <h4 class="text-xl font-bold mb-4">Connect with me</h4>
        <div class="flex gap-4">
          {socialLinks.map(link => (
            <a
              href={link.url}
              target="_blank"
              class="text-3xl hover:transform hover:scale-110 transition-transform"
              title={link.name}
            >
              {link.icon}
            </a>
          ))}
        </div>
      </div>
      
      <div>
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-gray-300 mb-2">Name</label>
            <input
              type="text"
              id="name"
              required
              class="w-full px-4 py-2 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"
            />
          </div>
          <div>
            <label for="email" class="block text-gray-300 mb-2">Email</label>
            <input
              type="email"
              id="email"
              required
              class="w-full px-4 py-2 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"
            />
          </div>
          <div>
            <label for="message" class="block text-gray-300 mb-2">Message</label>
            <textarea
              id="message"
              rows="5"
              required
              class="w-full px-4 py-2 bg-gray-900 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
